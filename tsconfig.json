{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "prisma": ["prisma/prisma.ts"],
            "src/*": ["src/*"],
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src/**/*",
        "prisma/**/*",
    ]
}
